{

	"manifest_version" 		:	2,

	"name" 					:	"Chrome Scrolling History",
	"version" 				:	"0.0.0.1",
	"description" 			:	"Maintains a history of your scrolling, and allows you to undo a major page position change",
	"homepage_url" 			:	"https://github.com/richardmin97/ScrollHistoryExtension",
	"author"				: 	"Richard Min @richardmin97",
	"incognito"				:	"split",
	"icons" 				: 
	{
		"16" 				: 	"icons/icon16.png",
		"48" 				: 	"icons/icon48.png",
		"128" 				: 	"icons/icon128.png"
	},

	"browser_action" 		:
	{
		"default_icon"		:	"icons/icons16.png",
		"default_title"		:	"ScrollHistory",
		"default_popup"		:	"button/popup.html"
	},


	"background"			:
	{
		"scripts"			:	[ "jquery/jquery.js"]
	},

	"permissions"			:
	[
		"http://*/*",
		"https://*/*",
		"tabs",
		"storage"

	],

	"commands"				:
	{

	},


	"content_scripts"		:	
	[
		{
			"all_frames"	:	"true"
		}
	],

}
